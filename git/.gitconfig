[color]
	diff = auto
	status = auto
	branch = auto
[user]
	name = Dmytro Milinevskyy
	email = milinevskyy@gmail.com
[core]
	editor = vim
	pager = less -+$LESS -FRSX
[alias]
	d = diff
	l = log
	br = branch
	in = !git remote update -p && git log ..@{u}
	out = log @{u}..
	fp = format-patch
	rb = rebase
	rbi = rebase -i
	ci = commit
	cia = commit --amend
	co = checkout
	up = !(git add . && git stash && git pull --rebase >&2) | grep -v "No local changes to save" && git stash pop
	st = status
	stb = status -sb
	pulom = pull origin master
	pusom = push origin master
	pr = pull --rebase
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	wd = diff --color-words
	cd = diff --cached
	wcd = diff --color-words --cached
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = red
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = red
    untracked = cyan
